[Unit]
Description=Dyad Web Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/dyad
EnvironmentFile=/etc/dyad/dyad.env
ExecStart=/usr/bin/npm run web:server
Restart=always
RestartSec=5
TimeoutStopSec=30
KillMode=mixed
User=dyad
Group=dyad
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
